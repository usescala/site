!!! 5
- import org.scala_tools.time.Imports._
- import unfiltered.scalate._
-@ var body:String = "body"
-@ var page:String
-
	val items:List[(String,String)] = List(
		("home","Home"),
		("meetings", "Meetings"),
		("sponsors",  "Sponsors"),
		("about", "About Us"))

html(lang="en")
	head
		link(rel="stylesheet" media="screen" href="/web/css/main.css")
		link(rel="shortcut icon" type="image/png" href="/web/image/favicon.png")
		link(href='http://fonts.googleapis.com/css?family=Architects+Daughter&v1' rel='stylesheet' type='text/css')
		script(src="/web/script/jquery-1.5.2.min.js" type="text/javascript")

	body
		div(id='wrapper')
			div(id='top')
				img(style='float: left' src='/web/image/logo.png' width='62' height='62')
				h1 USE Scala
				div(class='tag') Home of the Utah Scala Enthusiasts
			ul(id="main-menu")
				- for(item <- items)
					li(class='#{if(item._1 == page) "selected" else null}')
						a(href='#{item._1}')= item._2
			div(id='main')
				div(id='content')
					!= {body}
		div(id='bottom')
			a(href="http://www.scala-lang.org") Scala
			a(href="http://unfiltered.databinder.net/Unfiltered.html") Unfiltered Web Library
			a(href=".") &copy; 2011 Alvaro Carrasco